<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_title"
        style="@style/Kor32PointLightLeft"
        android:textColor="@color/colorRoyalBlue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="96dp"
        android:text="술을 얼마나\n즐기시나요?🤔"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.73"
        app:layout_constraintHeight_percent="0.5375"
        app:layout_constraintHorizontal_bias="0.5"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="264dp"
            android:layout_height="56dp"
            android:background="@drawable/favor_radius"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:text="전혀 마시지 않는다"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:layout_width="264dp"
            android:layout_height="56dp"
            android:background="@drawable/favor_radius"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:text="거의 즐기지 않는다"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:layout_width="264dp"
            android:layout_height="56dp"
            android:background="@drawable/favor_radius"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:text="종종 즐긴다"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:layout_width="264dp"
            android:layout_height="56dp"
            android:background="@drawable/favor_radius"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:text="자주 즐긴다"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:layout_width="264dp"
            android:layout_height="56dp"
            android:background="@drawable/favor_radius"
            android:gravity="center"
            android:layout_marginBottom="42dp"
            android:text="매우 즐긴다"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>